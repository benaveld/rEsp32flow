{
  "name": "rEsp32flow",
  "remoteUser": "dev",
  "containerUser": "dev",

  "workspaceFolder": "/app",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "source=/dev,target=/dev,type=bind,consistency=consistent",
    "source=pio,target=/app/.pio,type=volume",
    "source=vscode,target=/app/.vscode,type=volume",
    "source=data,target=/app/data,type=volume", // linked with /app/website/build
    "source=data,target=/app/website/build,type=volume", // linked with /app/data
    "source=node_modules,target=/app/website/node_modules,type=volume"
  ],
  "runArgs": ["--device-cgroup-rule=c 188:* rwm"],

  "settings": {
    "platformio-ide.customPATH": "/usr/bin",
    "platformio-ide.useBuiltinPIOCore": false,
    "platformio-ide.pioHomeServerHttpHost": "0.0.0.0",
    "platformio-ide.disablePIOHomeStartup": true,
    "cSpell.words": ["reduxjs"]
  },

  "extensions": [
    "platformio.platformio-ide",
    "esbenp.prettier-vscode",
    "msjsdiag.vscode-react-native",
    "dbaeumer.vscode-eslint",
    "KnisterPeter.vscode-github",
    "streetsidesoftware.code-spell-checker"
  ]
}
